<Window x:Class="ConfirmScout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfirmScout"
        mc:Ignorable="d"
        Title="Confirm Scout" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Window Selection -->
        <GroupBox Grid.Row="0" Header="Target Window" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="WindowListComboBox" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" DisplayMemberPath="Title"/>
                <Button x:Name="RefreshButton" Grid.Row="0" Grid.Column="1" Content="Refresh" Width="80" Click="RefreshButton_Click"/>
                <Button x:Name="SelectWindowButton" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Select Window" Margin="0,5,0,0" Click="SelectWindowButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- Capture Settings -->
        <GroupBox Grid.Row="1" Header="Capture Settings" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="FPS:" VerticalAlignment="Center" Width="100"/>
                    <Slider x:Name="FpsSlider" Width="200" Minimum="2" Maximum="5" Value="2" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Value, ElementName=FpsSlider, StringFormat={}{0:F0}}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <CheckBox x:Name="MoveCursorCheckBox" Content="Move cursor to detected text" IsChecked="False"/>
            </StackPanel>
        </GroupBox>

        <!-- Control Buttons -->
        <GroupBox Grid.Row="2" Header="Control" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button x:Name="StartButton" Content="Start Monitoring" Width="150" Margin="0,0,10,0" Click="StartButton_Click"/>
                <Button x:Name="StopButton" Content="Stop Monitoring" Width="150" IsEnabled="False" Click="StopButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Status -->
        <GroupBox Grid.Row="3" Header="Status" Margin="0,0,0,10">
            <TextBlock x:Name="StatusTextBlock" Margin="5" Text="Ready" TextWrapping="Wrap"/>
        </GroupBox>

        <!-- Hotkeys Info -->
        <GroupBox Grid.Row="4" Header="Hotkeys" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="• Ctrl+Alt+Enter - Click detected button (if visible and window is foreground)" TextWrapping="Wrap"/>
                <TextBlock Text="• Ctrl+Alt+S - Start scroll search (max 30 steps, press Esc to cancel)" TextWrapping="Wrap" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Log -->
        <GroupBox Grid.Row="5" Header="Log" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogTextBlock" Margin="5" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Footer -->
        <TextBlock Grid.Row="6" Text="ConfirmScout - Windows 11 WPF .NET 8 Application" HorizontalAlignment="Center" FontSize="10" Foreground="Gray"/>
    </Grid>
</Window>

